<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/favorite_teams_recycler_view_item_card_view_margin_bottom"
    app:cardCornerRadius="@dimen/general_card_view_radius"
    app:contentPadding="@dimen/favorite_teams_recycler_view_item_card_view_padding">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_logo_favorite_teams"
            android:layout_width="@dimen/favorite_teams_recycler_view_logo_size"
            android:layout_height="@dimen/favorite_teams_recycler_view_logo_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_name_favorite_teams"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/favorite_teams_text_view_name_margin_start"
            android:textSize="@dimen/favorite_teams_text_view_name_size"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/iv_logo_favorite_teams"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_logo_favorite_teams"
            app:layout_constraintTop_toTopOf="@+id/iv_logo_favorite_teams" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>